@{
}

@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge bg-primary rounded-pill" style="float:right;">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model.Author</div>
    <form method="post" asp-page="/Buy">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text" style="float:right;">
            <button type="submit" class="btn btn-xs btn-success float-end ">Add to Cart</button>
        </span>
    </form>

</div>

<ul>
    <li>Author: @Model.Author</li>
    <li>Publisher: @Model.Publisher</li>
    <li class="text-uppercase">Isbn: @Model.Isbn</li>
    <li>Classification: @Model.Classification</li>
    <li>Category: @Model.Category</li>
    <li>PageCount: @Model.PageCount</li>
    <li>Price: @Model.Price</li>
</ul>



